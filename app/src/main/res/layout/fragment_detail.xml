<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="app.comdev_sobo.httpsgithub.sunshine.DetailActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tommorrow"
        android:id="@+id/dayId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="September 10"
        android:id="@+id/dateId"
        android:layout_below="@+id/dayId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherIconId"
        android:src="@drawable/art_clear"
        android:layout_below="@+id/dateId"
        android:layout_toRightOf="@+id/dayId"
        android:layout_toEndOf="@+id/dayId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="18"
        android:id="@+id/temperatureId"
        android:textStyle="bold"
        android:layout_marginBottom="39dp"
        android:layout_alignBottom="@+id/weatherIconId"
        android:layout_alignRight="@+id/dateId"
        android:layout_alignEnd="@+id/dateId"
        android:textIsSelectable="false"
        android:textSize="65sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:id="@+id/lowTempId"
        android:layout_alignBottom="@+id/weatherIconId"
        android:layout_alignRight="@+id/temperatureId"
        android:layout_alignEnd="@+id/temperatureId"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

</RelativeLayout>
